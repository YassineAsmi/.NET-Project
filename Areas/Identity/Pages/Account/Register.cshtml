@page
@using WebProject.Models;
@model RegisterModel
@{

    ViewData["Title"] = "";
    UserManager<user> userManager; 
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col mx-auto">
        <div class="card p-4 shadow">
            <div class="card-body">
                <hr />
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
                    <div asp-validation-summary="ModelOnly" class="alert alert-dismissible alert-danger">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <strong>Oh snap!</strong> <a href="#" class="alert-link">Change a few things up</a> and try submitting again.
                    </div>
            <div class="form-floating" style="margin-bottom: 16px;">
                <input asp-for="Input.last_name" class="form-control" autocomplete="last_name" aria-required="true" />
                <label asp-for="Input.last_name"></label>
                <span asp-validation-for="Input.last_name" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom: 16px;">
                <input asp-for="Input.first_name" class="form-control" autocomplete="first_name" aria-required="true" />
                <label asp-for="Input.first_name"></label>
                <span asp-validation-for="Input.first_name" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom: 16px;">
                <input asp-for="Input.Address" class="form-control" autocomplete="Address" aria-required="true" />
                <label asp-for="Input.Address"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom: 16px;">
                <input asp-for="Input.phone_number" class="form-control" autocomplete="phone_number" aria-required="true" />
                <label asp-for="Input.phone_number"></label>
                <span asp-validation-for="Input.phone_number" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom: 16px;">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom: 16px;">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom: 16px;">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword" style="margin-bottom: 16px;"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="bg-danger text-light rounded" ></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
