@model WebProject.Models.CartVM
@{
    ViewData["Title"] = "Cart";
}

<section class="h-100" style="background-color: #000;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
                </div>

                @foreach (var item in Model.ListCart)
                {
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="@item.product.image" class="img-fluid rounded-3" alt="Cotton T-shirt">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2">@item.product.name</p>
                                    <p><span class="text-muted">@Html.Raw(item.product.description)</span></p>
                                </div>
                                <div class="col-md-4 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0">@item.product.price</h5>
                                    <h5 class="mb-0">x @item.quantity</h5>

                                    <a class="btn btn-outline-success" asp-action="plus" asp-route-orderid="@item.orderid" asp-route-productid="@item.productid" class="btn btn-link px-2">
                                        <i class="bi bi-node-plus-fill"></i>
                                    </a>
                                    <a class="btn btn-outline-primary" asp-action="minus" asp-route-orderid="@item.orderid" asp-route-productid="@item.productid" class="btn btn-link px-2">
                                        <i class="bi bi-node-minus-fill"></i>
                                    </a>
                                    <a class="btn btn-outline-danger" asp-action="delete" asp-route-orderid="@item.orderid" asp-route-productid="@item.productid" class="btn btn-link px-2">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <h3>Total: @Model.Order.total</h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <a asp-controller="orderProduct" asp-action="Summary" class="btn btn-primary">Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
