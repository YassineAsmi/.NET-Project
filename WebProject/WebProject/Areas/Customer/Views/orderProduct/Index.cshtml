@model WebProject.Models.CartVM
@{
    ViewData["Title"] = "Cart";
}

<section class="h-100" style="background-color: #000;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">
                <div class="d-flex justify-content-between align-items-center mb-6">
                    <h3 class="fw-normal mb-4 text-light">Shopping Cart</h3>
                </div>

                @foreach (var item in Model.ListCart)
                {
                    
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="@item.product.image" class="img-fluid rounded-3" alt="Cotton T-shirt">
                                </div>
                                <div class="col-md-3 col-lg-3 col-lg-2">
                                    <p class="lead fw-normal mb-2">@item.product.name</p>
                                    <p class="text-muted">@Html.Raw(item.product.description)</p>
                                </div>
                                <div class="col-md-8 col-lg-6 col-xl-4 offset-lg-3">
                                    <div class="d-flex align-items-center">
                                        <h5 class="mb-0"> Price @item.product.price</h5>
                                        <h5 class="mb-0 mx-2">x @item.quantity</h5>

                                        <a class="btn btn-outline-success mx-1" asp-action="plus" asp-route-orderid="@item.orderid" asp-route-productid="@item.productid" class="btn btn-link px-2">
                                            <i class="bi bi-plus-lg"></i>
                                        </a>
                                        <a class="btn btn-outline-primary mx-1" asp-action="minus" asp-route-orderid="@item.orderid" asp-route-productid="@item.productid" class="btn btn-link px-2">
                                            <i class="bi bi-dash-lg"></i>
                                        </a>
                                        <a class="btn btn-outline-danger mx-1" asp-action="delete" asp-route-orderid="@item.orderid" asp-route-productid="@item.productid" class="btn btn-link px-2">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <h3>Total: @Model.Order.total</h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <a asp-controller="orderProduct" asp-action="Summary" class="btn btn-primary">Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
