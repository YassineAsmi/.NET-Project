@model WebProject.Models.order_product

<h1> </h1>
<form method="post" asp-action="Details" asp-controller="home">
    <div class="row">
        <div class="col-4">
            <img src="@Model.product.image" class="img-fluid" />
            <input type="hidden" asp-for="productid" />
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-12">
                    <h3 class="text-info">@Model.product.name</h3>
                </div>
                <div class="col-12">

                    <span class="text-light">@Model.product.description</span>
                </div>

                <div class="col-12">
                    <label asp-for="quantity">Quantity:</label>
                    <input asp-for="quantity" class="form-control" name="quantity" />
                    <span asp-validation-for="quantity" class="text-danger"></span>
                </div>
                <div class="col-12">

                    <h1 class="text-warning">@Model.product.price Dt</h1>

                </div>
            </div>
            <div class="form-control">
                <a class="btn btn-outline-light" asp-area="customer" asp-action="Index" asp-controller="home">Back to List</a>
                <a class="btn btn-success" asp-area="customer" asp-action="AddToCart" asp-controller="orderProduct" asp-route-productId="@Model.productid" asp-route-quantity="@Model.quantity">Add to Cart</a>
            </div>
        </div>
    </div>
</form>

