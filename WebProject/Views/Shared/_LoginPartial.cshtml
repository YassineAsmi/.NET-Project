@using Microsoft.AspNetCore.Identity

@inject SignInManager<user> SignInManager
@inject UserManager<user> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="btn btn-light" id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello<b> @UserManager.GetUserName(User)! </b></a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button class ="btn btn-primary" id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="btn btn-warning my-2 me-2 my-sm-0" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="btn btn-danger my-2 my-sm-0" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
